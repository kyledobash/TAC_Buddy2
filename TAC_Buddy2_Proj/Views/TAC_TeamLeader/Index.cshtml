@model TAC_Buddy2_Proj.Models.TAC_TeamLeader;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Information & EDL</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EDIPI_DoD_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Billet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MOS_designator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EDL_Last_Verified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZAP_Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Rank)
            </td>
            <td>
                @Html.DisplayFor(model => model.FirstName)
            </td>
            <td>
                @Html.DisplayFor(model => model.LastName)
            </td>
            <td>
                @Html.DisplayFor(model => model.EDIPI_DoD_ID)
            </td>
            <td>
                @Html.DisplayFor(model => model.Billet)
            </td>
            <td>
                @Html.DisplayFor(model => model.MOS_designator)
            </td>
            <td>
                @Html.DisplayFor(model => model.EDL_Last_Verified)
            </td>
            <td>
                @Html.DisplayFor(model => model.ZAP_Number)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.TAC_TeamLeader_ID">Edit Info</a>
            </td>
        </tr>

    </tbody>
</table>
<h5>@Html.DisplayFor(model => model.Rank)
    @Html.DisplayFor(model => model.LastName)'s EDL        
</h5>
<table class="edl_table">
    <thead>
        <tr>
            <th>
                Item Name / Type
            </th>
            <th>
                Serial #
            </th>
            <th>
                <a asp-action="Create" asp-route-id="@Model.TAC_TeamLeader_ID">Add New EDL Item</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var edlItem in ViewBag.TeamLeaderGear)
        {
        <tr>
            <td>
                @edlItem.EDL_Item_Name
            </td>
            <td>
                @edlItem.EDL_Serial
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.TAC_TeamLeader_ID">Edit Info</a> |
                <a asp-action="Delete" asp-route-id="@Model.TAC_TeamLeader_ID"> Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

