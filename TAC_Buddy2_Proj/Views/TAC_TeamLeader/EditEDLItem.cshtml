@model TAC_Buddy2_Proj.Models.EDL_Item

@{
    ViewData["Title"] = "EditEDLItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit EDL Item Information</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEDLItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EDL_ID" />
            <div class="form-group">
                <label asp-for="EDL_Item_Name" class="control-label"></label>
                <input asp-for="EDL_Item_Name" class="form-control" />
                <span asp-validation-for="EDL_Item_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EDL_Serial" class="control-label"></label>
                <input asp-for="EDL_Serial" class="form-control" />
                <span asp-validation-for="EDL_Serial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
